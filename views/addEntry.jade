extends layout

block content
  body
     div(data-role='page', data-theme='b', class="page sarah-page")
      div(class="container")
        div(data-role='header', class = "header")
          div(data-role='icon', class="icon")
            img(src='/images/mydish_icon.png')
          div(data-role='title', class="title")
            h1 myDish
          a(target="_self", href='#/addEntry', data-icon='add', data-theme="b", class="ui-btn-right add-button", style="margin-top:10px;") Entry
        div(class="body-container")
          form(action='/addentry', method='post',id='newentry')
            input(id="title", type='text', name='recipetitle', placeholder='Title')
            div.meal-pic
              img(id="picture", src="/images/shawarma.jpeg")
            div.add-meal-button
              button(data-theme='a') Retake Photo
            textarea(id="recipe", name='recipe', placeholder='Recipe', style='height:100px')
            select(id="multiselect", name='category-choice', data-theme='a', multiple="multiple")
                option(value='entrees') Entree
                option(value='app') Appetizers
                option(value='dessert') Dessert
                option(value='bread') Bread
                option(value='new') Other...
            textarea(id = "notes", name='notes', placeholder='Notes', style='height:100px')
            div.submit-buttons
              div.cancel-button
                button(id="cancel",data-theme='r') Cancel
              div.save-button
                button(id="save",data-theme='b', type='submit') Save

  script(src='../public/javascript/addentry.js', type = 'text/javascript')
  script(src='../public/javascript/jquery.multiselect.min.js', type = 'text/javascript')
