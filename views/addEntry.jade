extends layout

block content
  body
    div(data-role='page', data-theme='b', class="page sarah-page")
      div(class="container")
        div(data-role='header', class = "header")
          a(class="back"  data-rel="back" data-role="none")
            div(class="back-arrow")
              img(src='/images/Back_arrow.png')
            div(data-role='icon', class="icon")
              img(src='/images/mydish_icon.png')
          div(data-role='title', class="title")
            h1 myDish
        div(class="body-container")
          form(action='/', method='post', id='newentry')
            div.entry-title
              div.entry-title-label
                h2 Title:
              div.entry-title-entry
                input(id="title", type='text', name='title')
            div.meal-pic
              img(id="cameraPicture", src="/images/mydish_icon.png")
              input(id="picture", type='hidden', name='picture')
            div.add-meal-button
              a(id="gotocamera", type="button", href='', data-theme='a', onclick="takePicture();") Take Photo
            h2 Recipe:
            textarea(id="recipe", name='recipe', style='height:100px')
            div.category-select
              select(id="multiselect", name='category', data-theme='a', multiple="multiple")
                  option(data-placeholder="true") Choose a category...
                  option(value='Entree') Entree
                  option(value='Appetizers') Appetizer
                  option(value='Dessert') Dessert
            h2 Notes:
            textarea(id = "notes", name='notes', style='height:100px')
            div.submit-buttons
              div.cancel-button
                a(data-rel="back")
                  button(id="cancel", data-theme="r", data-icon="delete") Cancel
              div.save-button
                button(id="save",data-theme='b', type='submit', data-icon="check") Save
  script(src='/javascript/addentry.js', type = 'text/javascript')  

    
