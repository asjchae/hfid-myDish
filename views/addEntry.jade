extends index

block content
  body
     div(data-role='page', data-theme='b', class="page sarah-page")
      div(class="container")
        div(data-role='header', class = "header")
          div(data-role='icon', class="icon")
            img(src='/images/mydish_icon.png')
          div(data-role='title', class="title")
            h1 myDish
          a(target="_self", href='#/addEntry', data-icon='add', data-theme="b", class="ui-btn-right add-button", style="margin-top:10px;") Entry
        div(class="body-container")
          form
            input(ng-model='form.title', type='text', name='recipetitle', placeholder='Title')
            div.meal-pic
              img(src="/images/shawarma.jpeg")
            div.add-meal-button
              button(data-theme='a') Retake Photo
            textarea(ng-model='form.recipe', name='recipe', placeholder='Recipe', style='height:100px')
            // Chris look at this page: http://jquerymobile.com/demos/1.2.1/docs/forms/selects/custom.html
            select(name='category-choice', data-theme='a')
                option(value='entrees') Entrees
                option(value='app') Appetizers
                option(value='dessert') Dessert
                option(value='bread') Bread
                option(value='new') Other...
            textarea(ng-model='form.notes', name='notes', placeholder='Notes', style='height:100px')
            div.submit-buttons
              div.cancel-button
                button(data-theme='r') Cancel
              div.save-button
                button(data-theme='b', type='submit') Save
            br
            br
            br
            br